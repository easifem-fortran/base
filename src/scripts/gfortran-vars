# First we define variables require for compiling

# fortran compiler
my_fc="gfortran"

# fortran compiler options
my_fc_opt="-Wextra"

# openmp flag
#my_openmp="-qopenmp"
my_openmp=" "

# preprocessing directive option
my_ppd_opt="-cpp"

# compiler flag
my_c="-c"

# PPD
my_ppd=" "

my="${my_fc} ${my_fc_opt}  ${my_c} ${my_openmp} ${my_ppd_opt} ${my_ppd}"

echo $my
red=`tput setaf 1`
green=`tput setaf 2`
reset=`tput sgr0`
