 SUBROUTINE setSigma(Stress, Sigma)
!
!   Description
!------------------------------------------------------------------------------
!       1.  - set the Sigma object
!
!------------------------------------------------------------------------------
!  Define arguments of dummy argument
    CLASS(Stress_)   ::  Stress
    REAL(DFP), DIMENSION(:), INTENT(IN):: Sigma
!
    INTEGER(I4B) :: n
!
    n = SIZE(Sigma, 1)
    CALL Stress%Initiate(n)
!
    Stress%Sigma(:) = Sigma(:)

 END SUBROUTINE setSigma
